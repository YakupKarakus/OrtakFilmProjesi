@model OrtakFilmProjesi.Areas.Admin.Models.SessionVM
@using OrtakFilmProjesi.Areas.Admin.Models
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="@Model.Session.Date" class="form-control" />
                <span asp-validation-for="@Model.Session.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Session.Discount" class="control-label"></label>
                <input asp-for="@Model.Session.Discount" class="form-control" />
                <span asp-validation-for="@Model.Session.Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionTimeEnum" class="control-label"></label>
                <select asp-for="SessionTimeEnum" asp-items="Html.GetEnumSelectList<SessionTimeEnum>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="SessionTimeEnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye geri dön.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
